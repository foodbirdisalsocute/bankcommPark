.section{
  margin-top: 5px;
  height: 30px;
  width: 100%;
  display: flex;
  
}
.localCity{
  width: 20%;
  display: flex;
  font-weight: 600;
  
  align-items: center;
  justify-content:center;
}



.searchItem{
   display: flex;
    background: #fff;
    flex-direction: row;
  width:75%;
  /*margin:5px auto;*/
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 120px;
  
    background-color: #F2F2F2;
 /* padding: 0 5px;*/
}
.searchItem input {
  margin-top: 1px;
   border-radius: 120px;

    font-size: 35rpx;
    background-color: #F2F2F2;
}
.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}





.map_container{
  position: absolute;
  height: 100%;
  top: 42px;
  bottom: 0px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}










.map_text{
  
  border-radius: 30rpx;
  position: absolute;
  margin-left: 5%;
  bottom: 0;
  height: 140px;
  background: rgb(250, 250, 250);
  z-index: 666;
  width: 90%;
}
.map_text_in{
  
  border-radius: 20rpx;
  margin: 4% 2%;
  flex-direction: row;
  display: flex;
}

.parkImg{
  width: 36%;
  border-radius: 20rpx;

}
.parkImg image{
  width: 100%;
  height: 100%;

}

.parkInfo{
  border-radius: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 2%
}

.parkNameAndIcon{
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  height: 35%;

}
.parkName-name{
  
  margin-left: 5rpx;
  width: 80%;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
  flex-direction: column;
 
  display: flex;
  align-items: center;
  justify-content:center;
  overflow: hidden;
}
.parkName-Icon{
  border-radius: 20rpx;
  width: 20%;

}
.parkName-Icon image{
  width:100%;
  height: 100%
}
.addressAndDis{
   display: flex;
   flex-direction: row;
   height: 21%;

}
.addressAndDis  image{
  width: 80%;
  height: 80%;
}
.localIcon{
   display: flex;
  align-items: center;
  justify-content:center;
  width: 24rpx;
  height: 20rpx;
  margin: auto;
 
}
.address{
  align-items: center;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 80%;
   font-size:24rpx;
 
  color: #999999;
}

.distance{
  align-items: center;
  font-size:24rpx;
  color: #999999;
  display: float;
  margin-right: 20rpx;
}

.useInfo{
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
   height: 20%;
 
}
.payInfo{

  width: 45%;
  display: flex;
  align-items:flex-end;
  justify-content: flex-start;
  font-size:12px;
  color: #999999;
}
.Money{
  margin-left: 5px;
  font-size:14px;
  color: red;
  font-weight: 600;
}
.vacancy{
    margin-left: 5px;
  font-size:14px;
  color: blue;
  font-weight: 600;
}
.useAble{
 
  width: 45%;
  display: flex;
  align-items:flex-end;
  justify-content: flex-start;
  font-size:12px;
  color: #999999;
}

.orderNow{
   background: #3C8CF8;
   width: 50%;
   height: 30px;
   border-radius: 120rpx;

  position: absolute;
   z-index: 999;
  left: 25%;
  bottom: 25px;
}

.orderNow button{
   background: #3C8CF8;
   width: 100%;
   height: 30px;
  border-radius: 120rpx;
  

}
.orderNow text{
  font-size: 12px;
  color: white;
  display: flex;
  align-items: center;
   justify-content:center;
}

















